@charset "utf-8"

// Functions
vendor-transform(prop, args)
  -webkit-{prop} args
  -ms-{prop} args
  {prop} args

transform()
  vendor-transform('transform', arguments)



// Color list
green = #23AAA4
l-green = #78BEB2
r-green = #5AB5B0
purple = #686F89
l-red = #DD6664
r-red = #DC5D54
red = #D94142
l-orange = #E9A21F
r-orange = #E78E21
yellow = #EDB51C



// Size
cube-size = 128px



.tsumiki-logo
  margin 0
  padding 0
  border none
  font-size 10px
  outline none
  margin-top (cube-size / 2)
  margin-left (cube-size / 2)
  width cube-size * 2
  height cube-size * 2
  position relative
  z-index 1
  transform scaleX(1) scaleY(.5) rotate(45deg)
  &:before, &:after
    content ""
    display block
    position absolute
    width cube-size
    height cube-size
    z-index 1
  &:before
    bottom 0
    left 0
    background l-red
  &:after
    top 0
    right 0
    background r-red

.cube
  margin 0
  padding 0
  border none
  font-size 10px
  outline none
  width cube-size * 2
  height cube-size * 2
  position relative
  &:before, &:after
    content ""
    display block
    position absolute
    width cube-size
    height cube-size
  &:before
    top 0
    left 0
  &:after
    top cube-size
    left cube-size 

.cube-first
  background linear-gradient(to right, l-green 0, l-green cube-size, r-green cube-size, r-green cube-size)
  top -(cube-size)
  left -(cube-size)
  z-index 1
  &:before
    background green

  &:after
    background purple

.cube-second
  background linear-gradient(to right, l-orange 0, l-orange cube-size, r-orange cube-size, r-orange cube-size)
  top -(cube-size)
  left cube-size
  z-index 1
  &:before
    background red

  &:after
    background yellow
